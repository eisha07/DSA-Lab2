#include <iostream> 
using namespace std; 


void analysePointer (int *ptr){
cout << "The address pointed to by the pointer is: "<< ptr << endl; 
cout << "The value held by the pointer is: "<< *ptr << endl; 

}

int main(){

int iValue; 
iValue = 28; 

analysePointer(&iValue); 

int *jValue = new int(35); 

cout << "\n\n";
analysePointer(jValue); 

system("pause"); 
return 0; 
}
